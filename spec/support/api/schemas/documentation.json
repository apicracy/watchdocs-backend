{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "documentation": {
      "$ref": "#/definitions/documentation_items"
    },
    "id": {
      "type": "integer"
    }
  },
  "required": [
    "documentation",
    "id"
  ],
  "type": "object",

  // Definitions

  "definitions":{
    // Main items schema
    "documentation_items":{
      "items": {
        "type": "object",
        "oneOf": [
          { "$ref": "#/definitions/endpoint" },
          { "$ref": "#/definitions/group" },
          { "$ref": "#/definitions/document" }
        ],
        "minItems": 0
      },
      "type": "array"
    },

    // Items types schemas
    "endpoint":{
      "properties": {
        "description": {
          "properties": {
            "content": {
              "type": ["string", "null"]
            },
            "title": {
              "type": ["string", "null"]
            }
          },
          "required": [
            "content",
            "title"
          ],
          "type": "object"
        },
        "id": {
          "type": "integer"
        },
        "method": {
          "type": "string"
        },
        "request": {
          "$ref": "#/definitions/request"
        },
        "responses": {
          "$ref": "#/definitions/responses"
        },
        "status": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "url_params": {
          "$ref": "#/definitions/url_params"
           }
      },
      "required": [
        "status",
        "url_params",
        "description",
        "url",
        "request",
        "method",
        "type",
        "id",
        "responses"
      ]
    },
    "group":{
      "properties": {
        "description": {
            "type": "string"
        },
        "id": {
            "type": "integer"
        },
        "items": {
          "$ref": "#/definitions/documentation_items"
        },
        "name": {
            "type": "string"
        },
        "type": {
            "type": "string"
        }
      },
      "required": [
        "items",
        "description",
        "type",
        "id",
        "name"
      ]
    },
    "document":{
      "properties": {
        "text": {
            "type": "string"
        },
        "id": {
            "type": "integer"
        },
        "name": {
            "type": "string"
        },
        "type": {
            "type": "string"
        }
      },
      "required": [
        "name",
        "type",
        "id",
        "name"
      ]
    },

    // Nested schemas
    "request": {
      "properties": {
        "body": {
          "type": ["object", "null"]
        },
        "body_draft": {
          "type": ["object", "null"]
        },
        "headers": {
          "$ref": "#/definitions/headers"
        },
        "id": {
          "type": "integer"
        },
        "status": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "body",
        "status",
        "body_draft",
        "id",
        "headers"
      ],
      "type": "object"
    },
    "responses": {
      "items": {
        "properties": {
          "body": {
            "type": ["object", "null"]
          },
          "body_draft": {
            "type": ["object", "null"]
          },
          "headers": {
            "$ref": "#/definitions/headers"
          },
          "id": {
            "type": "integer"
          },
          "endpoint_id": {
            "type": "integer"
          },
          "status": {
            "type": "string"
          },
          "http_status_code": {
            "type": "integer"
          }
        },
        "required": [
          "status",
          "body",
          "http_status_code",
          "headers",
          "body_draft",
          "id",
          "endpoint_id"
        ],
        "type": "object"

      },
      "type": "array"
    },
    "headers": {
      "items": {
        "properties": {
          "description": {
            "type": ["string", "null"]
          },
          "example_value": {
            "type": ["string", "null"]
          },
          "id": {
            "type": "integer"
          },
          "key": {
            "type": "string"
          },
          "required": {
            "type": "boolean"
          },
          "required_draft": {
            "type": ["boolean", "null"]
          },
          "status": {
            "type": "string"
          },
          "headerable_id": {
              "type": "integer"
          },
          "headerable_type": {
              "type": "string"
          }
        },
        "required": [
          "status",
          "description",
          "required",
          "id",
          "required_draft",
          "key",
          "example_value"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "url_params":{
      "items": {
          "properties": {
              "endpoint_id": {
                  "type": "integer"
              },
              "data_type": {
                  "type": "null"
              },
              "description": {
                  "type": "null"
              },
              "example": {
                  "type": "null"
              },
              "id": {
                  "type": "integer"
              },
              "is_part_of_url": {
                  "type": "boolean"
              },
              "name": {
                  "type": "string"
              },
              "required": {
                "type": ["boolean", "null"]
              },
              "required_draft": {
                  "type": ["boolean", "null"]
              }
          },
          "required": [
              "name",
              "data_type",
              "id",
              "is_part_of_url",
              "example",
              "description",
              "required",
              "required_draft"
          ],
          "type": "object"
      },
      "type": "array"
    }
  }
}
